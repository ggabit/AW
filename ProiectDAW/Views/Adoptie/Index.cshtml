@model IEnumerable<ProiectDAW.Models.Adoptie>

@{
    ViewBag.Title = "Lista adopțiilor";
    int index = 1;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Adaugă adopție", "Create",null, new { @class = "btn btn-success btn-xs" })
</p>
<table class="table">
    <tr>
        <th>
            #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataAdoptie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NrInregistrare)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersoanaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaineId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            Opțiuni
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @(index++).
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DataAdoptie)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NrInregistrare)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Persoana.Nume)
        @Html.DisplayFor(modelItem => item.Persoana.Prenume)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Caine.Nume)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.UpdateDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AspNetUser.Email)
    </td>
    <td>
        @Html.ActionLink("Editare", "Edit", new { id = item.AdoptieId }, new { @class = "btn btn-warning btn-xs" }) |
        @Html.ActionLink("Detalii", "Details", new { id = item.AdoptieId }, new { @class = "btn btn-info btn-xs" }) |
        @Html.ActionLink("Șterge", "Delete", new { id = item.AdoptieId }, new { @class = "btn btn-danger btn-xs" })
    </td>
</tr>
}

</table>
